<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/newRow">

    <TableRow>
        <TextView
            android:layout_column="1"
            android:text="@string/vadpress"
            android:textSize="16sp"
            android:padding="3dip" />

        <EditText
            android:hint="1"
            tools:ignore="HardcodedText"
            android:textAlignment="center"
            android:layout_column="2"
            android:inputType="number"
            android:maxLength="2"
            android:nextFocusDown="@+id/calfraiseWeight"
            android:id="@+id/calfraiseSet" />

        <EditText
            android:hint="10"
            tools:ignore="HardcodedText"
            android:textAlignment="center"
            android:id="@id/calfraiseWeight"
            android:layout_column="3"
            android:inputType="number"
            android:maxLength="3"
            android:nextFocusDown="@+id/calfraiseReps"
            />

        <EditText
            android:hint="10"
            tools:ignore="HardcodedText"
            android:textAlignment="center"
            android:id="@id/calfraiseReps"
            android:layout_column="4"
            android:inputType="number"
            android:maxLength="2" />
    </TableRow>
</TableLayout>