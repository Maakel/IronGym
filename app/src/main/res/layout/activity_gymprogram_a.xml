<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_gymprogram_a"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hokku.irongym.gymprogram_a">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:id="@+id/table1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#b9b9b9">



                <TextView
                    android:layout_column="1"
                    android:text="@string/vikt"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:padding="3dp" />

                <TextView
                    android:layout_column="2"
                    android:text="@string/reps"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:padding="3dp" />

                <TextView
                    android:layout_column="3"
                    android:text="@string/vikt"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:padding="3dp" />



                <TextView
                    android:layout_column="4"
                    android:text="@string/reps"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:padding="3dp" />
                <TextView
                    android:layout_column="5"
                    android:text="@string/vikt"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:padding="3dp" />
                <TextView
                    android:layout_column="6"
                    android:text="@string/reps"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:padding="3dp" />
                <TextView
                    android:layout_column="7"
                    android:text="@string/vikt"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:padding="3dp" />
                <TextView
                    android:layout_column="8"
                    android:text="@string/reps"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:padding="3dp" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="100dp"
                    android:layout_column="0"
                    android:text="@string/knaboj"
                    android:textSize="16sp"
                    />

                <EditText
                    android:hint="10"
                    tools:ignore="HardcodedText"
                    android:textAlignment="center"
                    android:layout_column="1"
                    android:inputType="number"
                    android:layout_width="40dp"
                    android:maxLength="3"
                    android:id="@+id/squatsWeight1"
                    android:nextFocusDown="@+id/squatsReps1"/>

                <EditText

                    android:hint="10"
                    tools:ignore="HardcodedText"
                    android:textAlignment="center"
                    android:id="@+id/squatsReps1"

                    android:layout_column="2"
                    android:inputType="number"
                    android:maxLength="3"

                    android:nextFocusDown="@+id/squatsWeight2"

                    />

                <EditText
                    android:hint="10"
                    tools:ignore="HardcodedText"
                    android:textAlignment="center"
                    android:layout_column="3"
                    android:inputType="number"
                    android:maxLength="3"
                    android:layout_width="40dp"
                    android:id="@+id/squatsWeight2"
                    android:nextFocusDown="@+id/squatsReps2"/>

                <EditText
                    android:hint="10"
                    tools:ignore="HardcodedText"
                    android:textAlignment="center"
                    android:id="@+id/squatsReps2"
                    android:layout_column="4"
                    android:inputType="number"
                    android:maxLength="2"
                    android:nextFocusDown="@+id/squatsWeight3" />

                <EditText
                    android:hint="10"
                    tools:ignore="HardcodedText"
                    android:textAlignment="center"
                    android:layout_column="5"
                    android:inputType="number"
                    android:maxLength="3"
                    android:layout_width="40dp"
                    android:id="@+id/squatsWeight3"
                    android:nextFocusDown="@+id/squatsReps3"/>

                <EditText
                    android:hint="10"
                    tools:ignore="HardcodedText"
                    android:textAlignment="center"
                    android:layout_column="6"
                    android:inputType="number"
                    android:maxLength="2"
                    android:id="@+id/squatsReps3"
                    android:nextFocusDown="@+id/squatsWeight4"/>

                <EditText
                    android:hint="10"
                    tools:ignore="HardcodedText"
                    android:textAlignment="center"
                    android:layout_column="7"
                    android:inputType="number"
                    android:maxLength="3"
                    android:layout_width="40dp"
                    android:id="@+id/squatsWeight4"
                    android:nextFocusDown="@+id/squatsReps4"/>

                <EditText
                    android:hint="10"
                    tools:ignore="HardcodedText"
                    android:textAlignment="center"
                    android:layout_column="8"
                    android:inputType="number"
                    android:maxLength="2"
                    android:id="@+id/squatsReps4"
                    android:nextFocusDown="@+id/benchpressWeight1"/>
            </TableRow>


            <TableRow>
                <TextView
                    android:layout_column="0"
                    android:text="@string/bankpress"
                    android:textSize="16sp" />

                <EditText
                    android:hint="1"
                    tools:ignore="HardcodedText"
                    android:textAlignment="center"
                    android:layout_column="1"
                    android:inputType="number"
                    android:maxLength="2"
                    android:id="@+id/benchpressWeight1"
                    android:nextFocusDown="@+id/benchpressReps1"/>

                <EditText
                    android:hint="10"
                    tools:ignore="HardcodedText"
                    android:textAlignment="center"
                    android:id="@+id/benchpressWeight"
                    android:layout_column="2"
                    android:inputType="number"
                    android:maxLength="3"
                    android:nextFocusDown="@+id/benchpressReps"
                    />

                <EditText
                    android:hint="10"
                    tools:ignore="HardcodedText"
                    android:textAlignment="center"
                    android:id="@+id/benchpressReps"
                    android:layout_column="3"
                    android:inputType="number"
                    android:maxLength="2"
                    android:nextFocusDown="@+id/rowSet"
                    />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_column="0"
                    android:text="@string/rodd"
                    android:textSize="16sp" />

                <EditText
                    android:hint="1"
                    tools:ignore="HardcodedText"
                    android:textAlignment="center"
                    android:layout_column="1"
                    android:inputType="number"
                    android:maxLength="2"
                    android:nextFocusDown="@+id/rowWeight"
                    android:id="@+id/rowSet" />

                <EditText
                    android:hint="10"
                    tools:ignore="HardcodedText"
                    android:textAlignment="center"
                    android:id="@+id/rowWeight"
                    android:layout_column="2"
                    android:inputType="number"
                    android:maxLength="3"
                    android:nextFocusDown="@+id/rowReps"
                    />

                <EditText
                    android:hint="10"
                    tools:ignore="HardcodedText"
                    android:textAlignment="center"
                    android:id="@+id/rowReps"
                    android:layout_column="3"
                    android:inputType="number"
                    android:maxLength="2"
                    android:nextFocusDown="@+id/calfraiseSet"
                    />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_column="0"
                    android:text="@string/vadpress"
                    android:textSize="16sp" />

                <EditText
                    android:hint="1"
                    tools:ignore="HardcodedText"
                    android:textAlignment="center"
                    android:layout_column="1"
                    android:inputType="number"
                    android:maxLength="2"
                    android:nextFocusDown="@+id/calfraiseWeight"
                    android:id="@+id/calfraiseSet" />

                <EditText
                    android:hint="10"
                    tools:ignore="HardcodedText"
                    android:textAlignment="center"
                    android:id="@+id/calfraiseWeight"
                    android:layout_column="2"
                    android:inputType="number"
                    android:maxLength="3"
                    android:nextFocusDown="@+id/calfraiseReps"
                    />

                <EditText
                    android:hint="10"
                    tools:ignore="HardcodedText"
                    android:textAlignment="center"
                    android:id="@+id/calfraiseReps"
                    android:layout_column="3"
                    android:inputType="number"
                    android:maxLength="2" />
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/addExercise"
            android:onClick="addExercise"
            android:text="+"
            tools:ignore="HardcodedText"
            android:layout_below="@id/table1"
            android:layout_width="60dp"
            android:layout_height="wrap_content" />

        <Button
            android:text="@string/spara"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonSave"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="saveExercise"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>

        <Button
            android:text="@string/visa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonShow"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:onClick="showOldValue"
            android:layout_below="@+id/addExercise" />

    </RelativeLayout>
</ScrollView>